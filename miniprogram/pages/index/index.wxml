<view class='switchJoke'>
	<van-button
	 size="small"
	 bind:click="lastJoke"
	 >上一个</van-button>
	<van-button
	 size="small"
	 bind:click="nextJoke"
	 >下一个</van-button>
</view>

<!-- 个人目标 -->
<van-tabs
 active="{{ active }}"
 bind:change="onTabChange">
  <van-tab title="全部目标">内容 1</van-tab>
  <van-tab title="已完成">内容 2</van-tab>
  <van-tab title="进行中">内容 3</van-tab>
</van-tabs>

