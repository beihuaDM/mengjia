		<van-notice-bar
	left-icon="https://img.yzcdn.cn/1.png"
  text="梦佳，要开心快乐每一天呀！有烦恼找窦先生，fighting！"
/>
	<!-- 搜索目标 -->
	<view class='searchTarget'>
		<view class='search'>
      <van-search
			 value="{{ search }}"
			 placeholder="梦佳想找什么目标呀"
			 background="#ffa5a5"
			 bind:change="onChange"
			 bind:search="onSearch"
  		 bind:cancel="onCancel"
			/>
    </view>
		<van-button
		 size='small'
		 round 
		 type="danger"
		 >搜一下吧
		 </van-button>
	</view>

	<!--每日笑话-->

	<van-panel
	 title="每日笑话"
	 desc="张女士，再搞笑的笑话，也不如你的微笑甜美"
	>
  <view class='joke'>
		{{joke[current].content}}
	</view>
</van-panel>

